<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox fx:id="editZoneNameDialog" minWidth="340.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.admin.dialog.AdminEditZoneNameDialogController">
   <children>
      <HBox>
         <children>
            <Button fx:id="zoneNameButton" minHeight="32.0" mnemonicParsing="false" prefHeight="32.0" text="จัดการจุดให้บริการ" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="zoneIdLabel" alignment="TOP_RIGHT" minWidth="70.0" text="00000">
               <styleClass>
                  <String fx:value="title-medium" />
                  <String fx:value="text-on-surface" />
               </styleClass>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="16.0" right="16.0" top="12.0" />
         </padding>
      </HBox>
      <VBox>
         <children>
            <VBox spacing="4.0">
               <children>
                  <Label maxHeight="14.0" text="ชื่อจุดให้บริการ">
                     <font>
                        <Font size="12.0" />
                     </font>
                     <styleClass>
                        <String fx:value="text-on-surface" />
                        <String fx:value="label-medium" />
                     </styleClass>
                  </Label>
                  <TextField fx:id="zoneNameTextField" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="32.0" prefHeight="32.0" promptText="ระบุชื่อจุดให้บริการ" />
                  <Label fx:id="zoneNameErrorLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" maxHeight="14.0" maxWidth="1.7976931348623157E308" textAlignment="RIGHT" textFill="#EF4444">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
      </VBox>
      <HBox alignment="BOTTOM_RIGHT" spacing="8.0">
         <children>
             <Button fx:id="closeButton" alignment="CENTER_RIGHT" minHeight="40.0" mnemonicParsing="false" text="ยกเลิก">
                 <styleClass>
                     <String fx:value="filled-button" />
                     <String fx:value="small" />
                 </styleClass>
             </Button>
            <Button fx:id="submitButton" alignment="CENTER_RIGHT" minHeight="40.0" mnemonicParsing="false" text="บันทึก">
               <styleClass>
                  <String fx:value="filled-button" />
                  <String fx:value="small" />
               </styleClass>
            </Button>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" />
         </padding>
      </HBox>
   </children>
</VBox>
