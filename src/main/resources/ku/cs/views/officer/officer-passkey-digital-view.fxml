<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox fx:id="passkeyDigitalDialogPane" minWidth="340.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.officer.DialogPane.PasskeyDigitalDialogPaneController">
   <children>
      <HBox>
         <children>
            <Button fx:id="keyNameButton" minHeight="32.0" mnemonicParsing="false" prefHeight="32.0" text="กำหนดรหัสเริ่มต้น" />
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="TOP_RIGHT" spacing="4.0">
               <children>
                  <Label fx:id="userNameLabel" alignment="TOP_RIGHT" minWidth="70.0" text="ชื่อผู้ใช้งาน: ">
                     <styleClass>
                        <String fx:value="label-large" />
                        <String fx:value="text-variant" />
                     </styleClass>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="requestUidLabel" alignment="TOP_RIGHT" minWidth="70.0" text="00000" textAlignment="RIGHT">
                     <styleClass>
                        <String fx:value="title-medium" />
                        <String fx:value="text-on-surface" />
                     </styleClass>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="16.0" right="16.0" top="12.0" />
         </padding>
      </HBox>
      <VBox spacing="12.0">
         <children>
            <Label fx:id="lockerUidLabel" text="ไอดีล็อกเกอร์: 00000">
               <styleClass>
                  <String fx:value="title-medium" />
                  <String fx:value="text-on-surface" />
               </styleClass>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <VBox spacing="4.0">
               <children>
                  <Label maxHeight="14.0" text="รหัสผ่านเริ่มต้น (ตัวเลขจำนวน5หลัก): ">
                     <font>
                        <Font size="12.0" />
                     </font>
                     <styleClass>
                        <String fx:value="text-on-surface" />
                        <String fx:value="label-medium" />
                     </styleClass>
                  </Label>
                  <HBox spacing="8.0">
                     <children>
                        <TextField fx:id="passKeyTextField" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="32.0" prefHeight="32.0" prefWidth="202.0" promptText="ระบุรหัส" />
                        <Button fx:id="generateButton" maxHeight="32.0" maxWidth="108.0" minHeight="32.0" minWidth="97.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="108.0" text="สร้างรหัสใหม่" />
                     </children>
                  </HBox>
                  <Label fx:id="errorLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" maxHeight="14.0" maxWidth="1.7976931348623157E308" textAlignment="RIGHT" textFill="#EF4444">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
      </VBox>
      <HBox alignment="BOTTOM_RIGHT" spacing="8.0">
         <children>
            <Button fx:id="cancelButton" alignment="CENTER_RIGHT" minHeight="40.0" mnemonicParsing="false" text="ยกเลิก">
               <styleClass>
                  <String fx:value="filled-button" />
                  <String fx:value="small" />
               </styleClass>
            </Button>
            <Button fx:id="confirmButton" alignment="CENTER_RIGHT" minHeight="40.0" mnemonicParsing="false" text="บันทึก">
               <styleClass>
                  <String fx:value="filled-button" />
                  <String fx:value="small" />
               </styleClass>
            </Button>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" />
         </padding>
      </HBox>
   </children>
</VBox>
