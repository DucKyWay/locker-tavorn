<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="miniUserProfile" maxWidth="1.7976931348623157E308" spacing="16.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.components.MiniProfileCardController">
   <children>
      <Pane prefHeight="48.0" prefWidth="48.0" style="-fx-background-radius: 24; -fx-border-radius: 24; -fx-border-width: 1;">
         <children>
            <ImageView fx:id="userImage" fitHeight="46.0" fitWidth="46.0" pickOnBounds="true">
               <image>
                  <Image url="@../../images/default_profile.png" />
               </image>
            </ImageView>
         </children>
         <styleClass>
            <String fx:value="bg-disabled" />
            <String fx:value="border-on-background" />
         </styleClass>
      </Pane>
      <VBox alignment="CENTER_LEFT" fillWidth="false" spacing="2.0">
         <children>
            <Label fx:id="fullName" text="Full Name">
               <font>
                  <Font size="16.0" />
               </font>
               <styleClass>
                  <String fx:value="body-medium" />
                  <String fx:value="text-on-background" />
               </styleClass>
            </Label>
            <Label fx:id="userName" text="username">
               <styleClass>
                  <String fx:value="label-large" />
                  <String fx:value="text-variant" />
               </styleClass>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</HBox>
